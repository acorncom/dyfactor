#!/usr/bin/env node
'use strict';

const fs = require('fs');
const spinner = require('ora')('Initializing dyfactor').start();
const dyfactorPath = `${process.cwd()}/.dyfactor.json`;

if (!fs.existsSync(dyfactorPath)) {
  fs.writeFileSync(
    dyfactorPath,
    JSON.stringify(
      {
        navigation: {
          pages: ['http://example.com']
        }
      },
      null,
      2
    )
  );
}

spinner.succeed('Initialized dyfactor');
