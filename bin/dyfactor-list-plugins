#!/usr/bin/env node
'use strict';

const { Environment } = require('../dist/commonjs/src');

let env = new Environment({
  build: 'ember build',
  navigation: {
    options: { waitTill: 'networkidle2' },
    urls: ['http://localhost:1234', 'http://localhost:1234/profile']
  }
});

let { plugins } = env;

let message = plugins.map((p) => {
  return `Name: ${p.name} Levels: ${p.modes.join(', ')}`
}).join('\n');

message = `\nPlugins\n========\n${message}`;

console.log(`${message}`);